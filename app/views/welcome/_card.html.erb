<div id="<%= dom_id(card) %>"
     class="card small-12 medium-<%= card.columns %> column margin-bottom end" data-equalizer-watch>
  <% if card.link_url.present? %>
    <%= link_to card.link_url do %>
      <%= render "card_content", card: card %>
    <% end %>
  <% else %>
    <%= render "card_content", card: card %>
  <% end %>
</div>
